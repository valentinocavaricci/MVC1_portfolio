@model List<MVC1_portfolio.Models.Project>

@{
    ViewData["Title"] = "Projects";
}

<h1 class="mb-4">My Projects</h1>

<p class="mb-5">
    Selected projects demonstrating backend, full-stack, and my architecture abilities.
</p>

<div class="row g-4">
    @foreach (var project in Model)
    {
        <div class="col-md-6 col-lg-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">

                    <h4 class="card-title">
                        @project.Title
                    </h4>

                    <p class="card-text mt-2">
                        @project.Description
                    </p>

                    <p class="text-muted mt-auto mb-2">
                        <strong>Tech:</strong> @project.TechStack
                    </p>

                    <span class="badge
                        @(project.Status == "Complete" ? "bg-success" :
                                                project.Status == "In Progress" ? "bg-primary" :
                                                "bg-secondary")">
                    @project.Status
                </span>

                    @* BUTTON — only shows if a link exists *@
                @if (!string.IsNullOrEmpty(project.Link))
                    {
                        <a href="@project.Link"
                           class="btn btn-outline-primary mt-3"
                           target="@(project.Link.StartsWith("http") ? "_blank" : "_self")">
                            View Project
                        </a>
                    }

                </div>
            </div>
        </div>
    }
</div>
