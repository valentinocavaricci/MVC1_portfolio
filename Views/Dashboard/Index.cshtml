@model MVC1_portfolio.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<h1 class="mb-4">Finance Dashboard</h1>

<div class="row g-4">

    <!-- Account BALANCE  -->
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Account Balance</h5>
                <p class="card-text fs-4">
                    @Model.CurrentBalance.ToString("C")
                </p>
            </div>
        </div>
    </div>

    <!-- Credit SCORE CARD  -->
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Credit Score</h5>
                <p class="card-text fs-4">
                    @Model.CreditScore
                </p>
            </div>
        </div>
    </div>

    <!-- Transactions CARD -->
    <div class="col-md-3">
        <a asp-controller="Transactions"
           asp-action="Index"
           class="text-decoration-none text-dark">

            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Transactions</h5>
                    <p class="card-text">
                        View and manage transactions
                    </p>
                </div>
            </div>

        </a>
    </div>

    <!-- Placeholder Card -->
    <div class="col-md-3">
        <div class="card h-100 text-muted">
            <div class="card-body">
                <h5 class="card-title">Analytics</h5>
                <p class="card-text">
                    Coming soon
                </p>
            </div>
        </div>
    </div>

</div>
